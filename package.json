{
  "name": "mcp-task-relay",
  "version": "0.2.0",
  "description": "MCP Task Relay - Async job execution system with artifact generation",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-task-relay": "dist/cli.js"
  },
  "files": [
    "dist",
    "prompts",
    "schemata",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "serve": "node dist/cli.js serve",
    "lint": "oxlint src",
    "lint:type-aware": "oxlint --type-aware src",
    "typecheck": "tsc --noEmit",
    "migrate": "tsx src/db/migrate.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "inspector": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "inspector:standalone": "MCP_MODE=false npx @modelcontextprotocol/inspector tsx src/index.ts",
    "docs:serve": "mkdocs serve",
    "docs:build": "mkdocs build",
    "docs:deploy": "mkdocs gh-deploy",
    "release:patch": "npm version patch -m 'chore(release): %s'",
    "release:minor": "npm version minor -m 'chore(release): %s'",
    "release:major": "npm version major -m 'chore(release): %s'"
  },
  "keywords": [
    "mcp",
    "task-relay",
    "async-execution",
    "job-queue"
  ],
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@modelcontextprotocol/sdk": "^1.21.1",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.6.1",
    "execa": "^9.6.0",
    "commander": "^13.1.0",
    "pino": "^9.14.0",
    "pino-pretty": "^13.1.2",
    "yaml": "^2.7.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.17.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.19.1",
    "oxlint": "latest",
    "oxlint-tsgolint": "^0.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.x",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/royisme/mcp-task-relay.git"
  },
  "bugs": {
    "url": "https://github.com/royisme/mcp-task-relay/issues"
  }
}
